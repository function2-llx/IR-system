{
    "settings": {
        "analysis": {
            "filter" : {
                "pos": {
                   "type" : "pattern_capture",
                   "preserve_original" : true,
                   "patterns" : ["([^_]*)_?([a-z]*)"]
                }
             },
            "analyzer": {
                "pos": {
                    "type": "custom",
                    "tokenizer": "whitespace",
                    "filter": [
                        "lowercase",
                        "pos"
                    ],
                    "position_increment_gap": 0
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "content": {
                "type": "text",
                "analyzer": "pos",
                "search_analyzer": "whitespace"
            },
            "content_vector": {
                "type": "dense_vector",
                "dims": 768
            }
        }
    }
}
